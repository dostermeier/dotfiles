        autosetuprebase = always
[alias]
        co = checkout
        br = branch
        st = status -s
        last = log -p -1 HEAD
        unstage = reset HEAD --
        lp = log --format=\"%h - %an, %ar : %s\"
        hist = log --graph --color=always --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s' --all
